<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ivolabs.android.ivo.SettingsActivityFragment">



    <SeekBar android:id="@+id/rangeSeekBar"
             android:max="2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="101dp"
             android:layout_alignParentTop="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true">
    </SeekBar>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:text="Logout"
        android:textSize="25sp"
        android:background="@color/bgBlue"
        android:textColor="@color/txWhite"
        android:id="@+id/logoutUser_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="177dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Range"
        android:textColor="@color/bgBlue"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/textView3"
        android:layout_marginBottom="50dp"
        android:layout_alignBottom="@+id/rangeSeekBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Close"
        android:textColor="@color/bgBlue"
        android:id="@+id/textView4"
        android:fontFamily="sans-serif-thin"
        android:layout_below="@+id/rangeSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Far"
        android:textColor="@color/bgBlue"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/textView5"
        android:layout_below="@+id/rangeSeekBar"
        android:layout_alignRight="@+id/rangeSeekBar"
        android:layout_alignEnd="@+id/rangeSeekBar"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />

</RelativeLayout>
